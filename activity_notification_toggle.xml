<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mpk.myprojects.NotificationToggleActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgWifi"
        android:src="@drawable/wifi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="WiFi"
        android:id="@+id/textViewWiFi"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgWifi"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="9dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/switchWiFi"
        android:layout_alignTop="@+id/textViewWiFi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView_wifi"
            android:background="#fff5d376"
            android:layout_below="@+id/imgWifi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />
            <!--android:layout_alignTop="@+id/scrollView"-->
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
